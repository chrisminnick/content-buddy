# Content Buddy Environment Configuration

# Core Settings
NODE_ENV=development
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUTS=console
# LOG_FILE=logs/content-buddy.log

# AI Provider Configuration
PROVIDER=openai
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here  
# GEMINI_API_KEY=your_gemini_key_here

# Provider Settings (can override config file)
# PROVIDER_TIMEOUT=30000
# PROVIDER_RETRY_ATTEMPTS=3
# PROVIDER_MAX_TOKENS=2000
# PROVIDER_TEMPERATURE=0.7

# Performance & Reliability
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Health Check Settings
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# Evaluation Settings
EVAL_TIMEOUT=120000
EVAL_MAX_CONCURRENT=3

# Metrics & Monitoring
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=30000

# Template Management
TEMPLATE_CACHE_TTL=3600000
TEMPLATE_VALIDATION_ON_LOAD=true

# Development Settings (only in development)
DEV_MOCK_PROVIDERS=false
DEV_ENABLE_DEBUG_LOGS=false
DEV_SKIP_HEALTH_CHECKS=false
